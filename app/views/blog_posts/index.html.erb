<p style="color: green"><%= notice %></p>

<h1 class="bg-gray-300 p-3">Blog posts</h1>

<div id="blog_posts">
  <% @blog_posts.each do |blog_post| %>
    <%= render blog_post %>
  <% end %>
</div>

<%= link_to "New blog post", new_blog_post_path %>

<% if @pagy.count > @pagy.items %>
  <div class="my-10">
   <%== pagy_nav(@pagy) %>
  </div>
<% end %>
