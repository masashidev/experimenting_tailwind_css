<div id="<%= dom_id blog_post %>">

  <%= image_tag blog_post.cover_image.variant(resize_to_limit: [200, 200]) if blog_post.cover_image.present? %>

  <div class="bg-gray-300 font-semibold capitalize">
    <h2>
      <%= link_to blog_post.title, blog_post %>
    </h2>
  </div>


  <div class="bg-blue-100 p-1">
  <p>
    <%= blog_post.content %>
  </p>
  </div>


</div>
